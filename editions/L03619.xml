               <p>
                  <seg rend="left">
                     <rs type="person" ref="#pmb7218">
                        <hi rend="pre-print">Karl Emil Franzos</hi>
                     </rs>
                  </seg>
                  <seg rend="right">
                     <rs type="org" ref="#pmb29619">
                        <hi rend="pre-print">Adolf Bonz <c rendition="#kaufmannsund"/> Comp.</hi>
                     </rs>
                  </seg>
